# .env.example
# Environment variables template
# Copy this to .env and adjust values

# Environment
ENVIRONMENT=development

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SCHEMA_REGISTRY_URL=http://schema-registry:8081
KAFKA_CONSUMER_GROUP=ecommerce-streaming-consumer

# Spark
SPARK_APP_NAME=EcommerceStreamingPipeline
SPARK_MASTER=local[*]
SPARK_CHECKPOINT_DIR=./checkpoint
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
SPARK_SHUFFLE_PARTITIONS=3
SPARK_WATERMARK_DELAY=10 minutes
SPARK_TRIGGER_INTERVAL=30 seconds

# PostgreSQL
POSTGRES_CONTAINER=postgres_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ecommerce_metrics
POSTGRES_USER=ecommerce
POSTGRES_PASSWORD=ecommerce123
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_BATCH_SIZE=1000

